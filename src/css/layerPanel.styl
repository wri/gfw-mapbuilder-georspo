// Loaded inline in html, image basepath is css/images/*.{jpg|png|svg}
@-webkit-keyframes loader2 {
    from {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg)
    }
    to {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg)
    }
}

@keyframes loader2 {
    from {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg)
    }
    to {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg)
    }
}

.layer-toggles
  border-bottom 1px solid $lightGray
  height 30px
  padding 2px 10px
  span
    display inline-block
    font-weight 100
  .right
    float right
    padding 5px 0 0 10px
  .small
    cursor pointer
    font-size 80%
    text-decoration underline
.layer-panel
  background white
  height calc(100% - 30px)
  overflow-y auto

.layer-category
  margin 10px

.layer-category-label
  border-bottom 1px solid $darkGray
  text-transform uppercase
  font-weight 500
  font-size 15px
  color $darkGray
  padding 5px 0
  & > span
    text-overflow ellipsis
    display inline-block
    white-space nowrap
    overflow hidden
    max-width 90%

.layer-category-content
  margin-left 10px

.layer-category-content.closed
  display none

.layer-category-caret
  pointer-events none
  margin-right 2px
  line-height 25px
  font-size 9px
  float right

.active-layer-count
  margin-left 5px
  font-size 12px

.layer-group-label
  text-transform uppercase
  font-weight 500
  font-size 14px
  margin 10px 0

.layer-panel .layer-content-container
  margin 0 30px

//- Legends
.water-stress-legend
.major-dams-legend
.land-cover-legend
.sediment-legend
.wetlands-legend
  justify-content center
  flex-wrap wrap
  display flex
  margin 5px 0
  & .legend-label
    font-size 12px
    padding 0 5px
  & .legend-row
    margin 5px 0
    display flex
    width 100%

.legend-icon
  width 20px
  height 20px

.water-stress-legend .no-data-labels div:nth-child(2)
.water-stress-legend .no-data-labels img:nth-child(4)
  order 1

.major-dams-legend
.land-cover-legend
  & .legend-row
    align-items center
    margin 1px 0
    display flex
    height 16px
    width 100%
  & .legend-label
    width 80%
  & .img
    width 20%

.wetlands-legend
  & .legend-label
    font-size 11px
  & .legend-row
    margin 1px 0
  & img
    height 20px
    width 20px

.canopy-label
.canopy-button
  font-size 10px

.tree-cover-canopy-display
  line-height 11px
  margin 5px 0

.canopy-button
  box-shadow 0 0 0 2px $goldTheme
  display inline-block
  background $goldTheme
  border-radius 10px
  padding 0px 4px
  margin 0 5px
  color white
  &:before
    content ' > '
  &:after
    content '% '

.layer-content-container
  flex-direction column
  align-items center

//- Timelines
.timeline-container
  margin 10px 0
  &.flex
    align-items center
  &.fires
    width 125px
  &.loss
    width 100%
    & .irs-line-left
    & .irs-line-right
    & .irs-line-mid
      background white
    & .irs-grid-pol.small
      display none
    & .irs-bar
      background $goldTheme
      border-radius 5px
      height 7px
    & .irs-grid-pol
      border-radius 50%
      height 2px
      width 2px
      top -12px
    & .irs-slider
      cursor col-resize
  & select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
    &:hover + div
      background darken(white, 10%)

.loss-timeline-spacer
  font-size 12px
  padding 0 8px

//- The classes below are the layer ids, if those layer ids are changed in the config, they will need
//- to be updated here as well so that the correct colors are applied to the layer checkbox
.layer-checkbox
.toggle-switch__container
  padding-bottom 3px
  margin-top 3px
  &.disabled
    & .layer-checkbox-label
      color $disabledFont
    & .info-icon
      background $disabledBackground
  &.active
    & > .toggle-switch
      background $goldTheme
    & > .toggle-switch span
      left 9px
    &.loss .toggle-switch
      background $treeCoverLoss
    &.gain .toggle-switch
      background $treeCoverGain
    &.active-fires .toggle-switch
      background $activeFires
    &.burn-scars .toggle-switch
      background $burnScars
    &.tree-cover .toggle-switch
      background $treeCoverDensity
    &.dams .toggle-switch
      background $majorDams
    &.sediment .toggle-switch
      background $sediment
    &.water-stress .toggle-switch
      background $waterStress
    &.wetlands .toggle-switch
      background $wetlands
    &.historic-loss .toggle-switch
      background $historicLoss

.layer-checkbox-label
  display inline-block
  vertical-align top
  padding-left 10px
  padding-top 2px
  font-size 13px
  max-width 80%


.layer-checkbox-sublabel
  padding 0 25px 0 35px
  color $lightGray
  line-height 12px
  font-size 11px

.toggle-switch
  transition all 0.3s ease
  background $lightGray
  display inline-block
  border-radius 5px
  position relative
  height 10px
  width 17px

.toggle-switch span
  transition all 0.3s ease
  border-radius 50%
  position absolute
  background white
  height 6px
  width 6px
  left 2px
  top 2px

.layer-info
  background-color $goldTheme
  display inline-block
  position absolute
  border-radius 50%
  height 14px
  width 14px
  right 10px
  top 4px

.layer-info svg
  position absolute
  margin auto
  fill white
  height 8px
  width 8px
  bottom 0
  right 0
  left 0
  top 0

.info-icon
  background-color $goldTheme
  display inline-block
  position absolute
  border-radius 50%
  height 14px
  width 14px
  right 10px
  top 4px
  &.iconLoading
    font-size 18px
    svg
      -webkit-animation-name loader2
      -webkit-animation-duration 1s
      -webkit-animation-iteration-count infinite
      -webkit-animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
      -webkit-animation-direction normal
      -webkit-animation-fill-mode none
      -webkit-animation-delay 0s
      -webkit-animation-play-state running
      animation-name loader2
      animation-duration 1s
      animation-iteration-count infinite
      animation-timing-function cubic-bezier(0.645, 0.045, 0.355, 1)
      animation-direction normal
      animation-fill-mode none
      animation-delay 0s
      animation-play-state running
      z-index 11

.info-icon svg
  position absolute
  margin auto
  fill white
  height 8px
  width 8px
  bottom 0
  right 0
  left 0
  top 0

.toggle-switch__label
  padding-left 10px
  font-size 12px

.picker__top
  position fixed
  width 300px
  z-index 50
  left 20px
  top 140px
  & .picker__select--year
  & .picker__select--month
    padding 0

.root .picker__button--clear
  display none

.glad-controls__calendars
.terra-i-controls__calendars
  display table

.glad-controls__calendars--row
.terra-i-controls__calendars--row
  display table-row
  & input
  & label
    display table-cell
    font-size 12px
    margin 3px

.data-error
  text-align center
  margin 20px 10px
  color red

#lossPlayButton, #lossPauseButton
  position absolute
  top 73px
  left 4px
  cursor pointer
  color $goldTheme

.slider-tooltip
  position absolute
  display none
  top 50px
  z-index 2000
  background white
  color $darkGray
  text-align center
  font-size 10px
  padding 4px 8px
  border-radius 2px
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)
  min-width 40px
  margin-left 6px
  &::before
    content ''
    display block
    position absolute
    background-color white
    width 8px
    height 8px
    -webkit-transform rotate(45deg)
    transform rotate(45deg)
    box-shadow 1px 1px 1px 0 rgba(85,85,85,0.5)
    right 0
    left 0
    margin auto
    bottom -4px
