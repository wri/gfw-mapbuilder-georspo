//- My styles
.print-dijit
  display flex

.print-dijit-label
  padding 5px 8px

//- dojo overrides
.dijitMenuPopup
  box-shadow 0px 1px 2px rgba(0,0,0,0.25)
  position absolute
  background white

.dijitMenuItem
  -webkit-highlight none
  cursor pointer
  outline none
  &:hover
    background-color darken(white, 10%)


.dijitMenu .dijitMenuItemLabel
  font-family $fontFamily
  font-size 14px

.dijitButtonContents
.dijitArrowButton
  box-shadow 0 0 2px darken(rgba(0,0,0,0.25), 90%)
  -webkit-highlight none
  padding 8px 16px
  cursor pointer
  outline none

.dijitArrowButton
  padding 8px

.dijitOffScreen
.dijitToggleButtonIconChar
  display none

//- esri overrides

.print-dijit .esriPrint
  margin 10px auto
  padding 0

.print-dijit .esriPrintButton
  // box-shadow 0 0 2px rgba(0,0,0,0.25)
  font-weight bold
  font-size 16px
  margin 0 auto
  &:hover
    cursor pointer
